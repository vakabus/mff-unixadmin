#!/bin/bash

# vyrabim uzivatele teacher
useradd -m teacher
usermod -a -G wheel teacher
mkdir -p /home/teacher/.ssh
echo "ssh-rsa  asch@unixadmin.ms.mff.cuni.cz" > /home/teacher/.ssh/authorized_keys
chown -R teacher:teacher /home/teacher

# resim problem s prihlasovanim pomoci ssh klicu
chown -R root:root /root

exec /lib/systemd/systemd
